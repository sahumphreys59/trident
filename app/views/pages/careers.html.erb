<% if user_signed_in? %>
	<div class="nav-item" style="padding-right:50px;" align="right">
			<%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: 'btn btn-secondary', style: 'color: grey;' %>
	</div>
<% else %>
	<div class="nav-item" style="padding-right:50px;" align="right">
		<%= link_to 'Admin', new_user_session_path, class: 'btn-btn-secondary', style: 'color: grey;'  %>
	</div>
<% end %>

<u><h1 align="center" class="animated zoomIn" style="font-size: 40px;">Career Opportunities</h1></u>
<div class="careers col-10 offset-2">
<br/>
	<div class="row col-10">
		<div class="col-sm-12 col-lg-6">
			<div class="fulltime animated zoomIn delay-1s">
				<% if user_signed_in? %>
					<div align="left" style="float: right;">
						<%= link_to 'New Job', new_fulltimejob_path, class: 'btn btn-primary'  %>
					</div>	
				<% end %>
					<div class="fulljob">
						<br/>
						<u><h3 align="center" style="font-size: 35px;">Full-Time Positions</h3></u>
						<br/>
					</div>	
							
					<% @fulltimejobs.each do |fulltimejob| %>
						<% if user_signed_in? %>
							<div style="float: right;">
								<%= link_to 'Edit', edit_fulltimejob_path(fulltimejob), class: 'btn btn-primary' %>
								<%= link_to 'Delete', fulltimejob_path(fulltimejob), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %>
							</div>	
						<% end %>
						<h3><b>
							<br/>
							<div align="center"><%= link_to fulltimejob.title, fulltimejob_path(fulltimejob) , style: 'color:white;'%>
							</div></b></h3>
							<div align="center">
								<h4>Location: <%= fulltimejob.location %></h4>
							</div> <br/>
							<hr>
					<% end %>
				</div>
			</div>
			<div class="col-sm-12 col-lg-6 mb-3">
				<div class="fulltime animated zoomIn delay-1s">
					<% if user_signed_in? %>
						<div align="left" style="float: right;">
							<%= link_to 'New Job', new_parttimejob_path, class: 'btn btn-primary'  %>
						</div>	
					<% end %>
					<div class="fulljob">
						<br/>
						<u><h3 align="center" style="font-size: 35px;">Part-Time Positions</h3></u>
						<br/>
					</div>	
						<br/>
						<% @parttimejobs.each do |parttimejob| %>
						<% if user_signed_in? %>
							<div style="float: right;">
								<%= link_to 'Edit', edit_parttimejob_path(parttimejob), class: 'btn btn-primary' %>
								<%= link_to 'Delete', parttimejob_path(parttimejob), method: :delete, data: {confirm: 'Are you sure you want to  delete this?'}, class: 'btn btn-danger' %>
							</div>
						<% end %>	
						<h3><b>
							<div align="center">
								<%= link_to parttimejob.title, parttimejob_path(parttimejob) %></b> <br/>
								
							</div></h3>
							<div align="center">
								<h4><%= parttimejob.location %></h4>
							</div>	
						<br/>
						<hr>
					<% end %>	
					<br/>
				</div>	
			</div>
		</div>
</div>


