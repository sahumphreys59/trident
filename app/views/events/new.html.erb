<div class="event-box col-5 offset-3">
	<h1>Enter Event Information:</h1>
	<%= simple_form_for @event do |f| %>
		<%= f.input :title %>
		<%= f.input :start_date %>
		<%= f.input :end_date %>
		<%= f.input :location %>
		<%= f.input :details %>
		<br />
		<%= f.submit 'Create', class: 'btn btn-primary' %>
	<% end %>	
</div>