<body class="map">
	<div class="event animated zoomIn">
		<br/>
		<h1 align="center" style="font-size: 32px; font-weight: 350;">Upcoming News & Events</h1>
		<br/>
	</div>
	<br />
	<div class="animated zoomIn">		
			<% if user_signed_in? %>
				<div align="left" style="padding-left:80px;">
					<!-- Button trigger modal -->
					<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
					  New Event
					</button>
				</div>	
			<% end %>	

			<% if user_signed_in? %>
			  <div class="nav-item" style="padding-right:50px;" align="right">
			    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-secondary' %>
			  </div>
			<% else %>
			  <div class="nav-item" style="padding-right:50px;" align="right">
			    <%= link_to 'Admin', new_user_session_path, class: 'btn-btn-secondary'  %>
			  </div>
			<% end %>



			<br/>
			<div class="col-6 offset-3 animated zoomIn">
				<% @events.each do |event| %>
					<div class="event-box" >
						<div style="padding: 5px;">
							<% if user_signed_in? %>
					    	<%= link_to 'Edit', edit_event_path(event), class: 'btn btn-primary' %>
					    	<%= link_to 'Delete', event_path(event), method: :delete, data: {confirm: 'Are you sure you want to delete this?'},class: 'btn btn-danger' %>
					    <% end %>	
					  </div>
		<br/>
						<u><h1 style="font-size: 35px;" align="center"><%= event.title %></h1></u><br />
						<h1 style="font-size: 25px;" align="center"><%= event.start_date.strftime("%B %e, %Y") %> - <%= event.end_date.strftime("%B %e, %Y") %></h1>
						<h1 style="font-size: 22px;" align="center">Location: <%= event.location %></h1>
						<h1 align="center">Details: <%= event.details %></h1><br />
					</div>
				<% end %>	
			</div>		
				<br />
<br/>

	</div>
</body>	



<!-- Modal For New Event -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header"  style="background:#022747;">
        <h1 align="center" style="font-size: 25px;">Create New Event</h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color; white;">
          <span aria-hidden="true">x</span>
        </button>
      </div>
      <div class="modal-body" style="background:#022747;">
        
				<%= simple_form_for @event do |f| %>
					<%= f.input :title %>
					<%= f.input :start_date, as: :date, input_html: { class: "datepicker" }%>
					<%= f.input :end_date, as: :date, input_html: { class: "datepicker" }%>
					<%= f.input :location %>
					<%= f.input :details %>
					<br />
					<div align="center">
						<%= f.submit 'Create', class: 'btn btn-primary' %>
					</div>
					<br/>
				<% end %>
      </div>
    </div>
  </div>
</div>





